
<div
  id="Banner-{{ section.id }}"
  class="relative">
  {%- if section.settings.image != blank -%}
    <div class="absolute inset-0 media{% if section.settings.image == blank and section.settings.image_2 == blank %} placeholder{% endif %}{% if section.settings.image_2 != blank %} banner__media-half{% endif %}"
      style="background-color"
    >
      {%- liquid
        assign image_height = section.settings.image.width | divided_by: section.settings.image.aspect_ratio
        
        assign image_class = 'hidden md:block w-full h-full object-cover object-center'
        
        if section.settings.image_2 != blank and section.settings.stack_images_on_mobile
          assign sizes = '(min-width: 750px) 50vw, 100vw'
        elsif section.settings.image_2 != blank
          assign sizes = '50vw'
        else
          assign sizes = '100vw'
        endif
      -%}
      {{
        section.settings.image
        | image_url: width: 3840
        | image_tag:
          loading: 'lazy',
          width: section.settings.image.width,
          height: image_height,
          class: image_class,
          sizes: sizes
      }}


      {%- if section.settings.image_2 != blank -%}
        {%- liquid
          assign image_height_2 = section.settings.image_2.width | divided_by: section.settings.image_2.aspect_ratio
          
          assign image_class_2 = 'block md:hidden w-full h-full object-cover object-center'

          if section.settings.image != blank and section.settings.stack_images_on_mobile
            assign sizes = '(min-width: 750px) 50vw, 100vw'
          elsif section.settings.image != blank
            assign sizes = '50vw'
          else
            assign sizes = '100vw'
          endif
        -%}
        {{
          section.settings.image_2
          | image_url: width: 3840
          | image_tag:
            loading: 'lazy',
            width: section.settings.image_2.width,
            height: image_height_2,
            class: image_class_2,
            sizes: sizes,
            widths: '375, 550, 750, 1100, 1500, 1780, 2000, 3000, 3840'
        }}
    {%- endif -%}
    </div>

    <div class="absolute bg-black inset-0" style="opacity:{{ section.settings.image_overlay_opacity | divided_by: 100.0 }};" ></div>


  {%- endif -%}


  <div class="h-screen py-10 relative inset-0 {{ section.settings.desktop_content_position }} text-white text-center flex justify-center items-center {{ section.settings.image_height }}">
    <div class="container">
      {%- for block in section.blocks -%}
        {%- case block.type -%}
          {%- when 'heading' -%}
            <h2 class="text-4xl font-extrabold uppercase mb-3" {{ block.shopify_attributes }}>{{ block.settings.heading }}</h2>
          {%- when 'text' -%}
            <div class="text-xl uppercase{{ block.settings.text_style }}" {{ block.shopify_attributes }}>
              <p>{{ block.settings.text }}</p>
            </div>
          {%- when 'buttons' -%}
            <div class="mt-8" {{ block.shopify_attributes }} >
              {%- if block.settings.button_label != blank -%}
                <a
                  {% if block.settings.button_link == blank %}
                    role="link" aria-disabled="true"
                  {% else %}
                    href="{{ block.settings.button_link }}"
                  {% endif %}
                  class="inline-flex justify-center rounded-lg text-sm font-bold uppercase py-3 px-6 bg-transparent border-2 border-white text-white ring-1 ring-slate-900/10 hover:bg-white/100 hover:text-black"
                >
                  {{- block.settings.button_label | escape -}}
                </a>
              {%- endif -%}
            </div>
        {%- endcase -%}
      {%- endfor -%}
    </div>
  </div>
</div>

